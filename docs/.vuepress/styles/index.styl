body
  font-family: Roboto,-apple-system,BlinkMacSystemFont,"Segoe UI",Helvetica,Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol"
  font-weight: 400;
  font-style: normal;
  -webkit-tap-highlight-color: transparent;

#search
  background-color: #282a2d
#search:focus
  background-color: #313131

.site-name
  display: none !important

.navbar
    border-bottom: 2px #FF6347 solid;
    background-color: #202327

.navbar .links
      background-color: #202327 !important
      color: #A3A3A3

.navbar .links:hover
      background-color: #202327 !important
      color: #e2e8f0

.nav-link
   color: #cbd5e0 !important
  .icon.outbound
    color: #cbd5e0 !important

.nav-link:hover
  color: #a0aec0 !important
  .icon
   color: #a0aec0 !important

.custom-block
    border-radius: 5px;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    border: 0px solid !important;

  &.tip
     border-color: #48bb78!important
     background-color: #f0fff4!important

  &.danger
     border-color: #f56565!important
     .custom-block-title
         color: red

  &.warning
     border-color: #ecc94b!important

  &.details
      background-color: #f7fafc!important

.header-anchor
    color: #a0aec0

a
 color: #2d3748

a:hover
 color: #4a5568
 text-decoration: none !important

.table-of-contents a:before
    content: "# ";
    color: #a0aec0;
    margin-left: -15px;
    margin-right: 3px;

#app > div.theme-container.no-sidebar > main > header > p.action > a
  @apply rounded-full text-gray-100 !important; 
  background-color: #2f2f41;

#app > div.theme-container.no-sidebar > main > header > p.action > a:hover
  @apply shadow-lg text-gray-200 !important; 
  background-color: #2f2f41;

.home .feature
     @apply pb-4 !important;
   h2
     @apply pb-2 !important;

div.table-of-contents  ul > li:before
   content: none;

.table-of-contents a:before
  @apply text-theme-orange-light-800

.header-anchor
  color: #fe7962 !important;

div.table-of-contents > ul:first-child > li > a
  @apply text-black no-underline

div.table-of-contents > ul > li > ul > li > a
  @apply text-gray-700 no-underline

.prose ul > li::before
  @apply bg-theme-orange-light-600 !important;

p > code 
  @apply text-theme-orange-light-800 !important;

div.prose > div.custom-block > * > a
     @apply underline text-gray-800 !important;

div.prose > *:not(.table-of-contents) a
     @apply text-theme-orange-light-800 no-underline !important;

pre
 font-family: source-code-pro,ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,Liberation Mono,Courier New,monospace !important
 text-align: left;
 white-space: pre;
 word-spacing: normal;
 word-break: normal;
 word-wrap: normal;
 -moz-tab-size: 4;
 -o-tab-size: 4;
 tab-size: 4;
 -webkit-hyphens: none;
